@model List<Urun>
@{
    ViewData["Title"] = "Index";
}

<h1>Ürünler</h1>


<!-- shop section -->

<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Tüm Ürünler
            </h2>
        </div>
        <div class="row">

            @foreach (Urun item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="box">
                        <a href="">
                            <div class="img-box">
                                <img src="~/images/@item.Resim" alt="">
                            </div>
                            <div class="detail-box">
                                <h6>
                                    @item.Ad
                                </h6>
                                <h6>
                                    Fiyat
                                    <span>
                                        @item.Fiyat
                                    </span>
                                </h6>
                            </div>
                            <div class="new">
                                <span>
                                    Yeni
                                </span>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>

    </div>
</section>

<!-- end shop section -->
